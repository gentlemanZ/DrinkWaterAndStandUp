<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_graph"
        app:startDestination="@id/fragment_timer_config">

    <fragment
            android:id="@+id/fragment_timer_config"
            android:name="com.tianyang.android.drinkwaterandstandup.FragmentTimerConfig"
            android:label="fragment_timer_config"
            tools:layout="@layout/fragment_timer_config">
        <action
                android:id="@+id/action_timer_config_to_timer"
                app:destination="@id/fragment_timer">
            <argument
                    android:name="TIME_TO_COUNT_DOWN"
                    android:defaultValue="0L"
                    app:argType="long" />
        </action>
    </fragment>
    <fragment
            android:id="@+id/fragment_timer"
            android:name="com.tianyang.android.drinkwaterandstandup.FragmentTimer"
            android:label="fragment_timer"
            tools:layout="@layout/fragment_timer">
        <argument
                android:name="TIME_TO_COUNT_DOWN"
                android:defaultValue="0L"
                app:argType="long" />
    </fragment>
</navigation>